{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
      "name": "django-postgres-template"
    },
    "objects": [
      {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
          "name": "django",
          "labels": {
            "name": "django"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "django",
              "image": "quay.io/${RHT_OCP4_QUAY_USER}/backend",
              "ports": [
                {
                  "containerPort": 8000,
                  "name": "django"
                }
              ],
              "resources": {
                "limits": {
                  "cpu": "0.5"
                }
              },
              "env": [
                {
                  "name": "POSTGRES_DB",
                  "value": "Crm"
                },
                {
                  "name": "POSTGRES_USER",
                  "value": "Crm"
                },
                {
                  "name": "POSTGRES_PASSWORD",
                  "value": "crm_pass"
                },
                {
                  "name": "POSTGRES_HOST",
                  "value": "postgres-service"
                },
                {
                  "name": "EMAIL_HOST_PASSWORD",
                  "value": "eyptqiigpjsvbqwu"
                },
                {
                  "name": "EMAIL_HOST_USER",
                  "value": "aqwa4394@gmail.com"
                },
                {
                  "name": "DOMAIN",
                  "value": "localhost:3000"
                }
              ]
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
          "name": "db",
          "labels": {
            "name": "db"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "db",
              "image": "rhel8/postgres:15",
              "ports": [
                {
                  "containerPort": 5432,
                  "name": "db"
                }
              ],
              "volumeMounts": [
                {
                  "name": "db-data",
                  "mountPath": "/var/lib/postgresql/data"
                }
              ],
              "env": [
                {
                  "name": "POSTGRESQL_DATABASE",
                  "value": "Crm"
                },
                {
                  "name": "POSTGRESQL_USER",
                  "value": "Crm"
                },
                {
                  "name": "POSTGRESQL_PASSWORD",
                  "value": "crm_pass"
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "postgres-data",
              "persistentVolumeClaim": {
                "claimName": "postgres-pvc"
              }
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "PersistentVolumeClaim",
        "metadata": {
          "name": "postgres-pvc"
        },
        "spec": {
          "accessModes": ["ReadWriteOnce"],
          "resources": {
            "requests": {
              "storage": "1Gi"
            }
          }
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Service",
        "metadata": {
          "name": "django-service"
        },
        "spec": {
          "selector": {
            "name": "django"
          },
          "ports": [
            {
              "port": 8080
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Service",
        "metadata": {
          "name": "postgres-service"
        },
        "spec": {
          "selector": {
            "name": "db"
          },
          "ports": [
            {
              "port": 3306
            }
          ]
        }
      }
    ],
    "parameters": [
        {
            "description" : "Quay namespace the images are stored in" ,
            "name":"RHT_OCP4_QUAY_USER",
            " required" :true
         }
    ]
  }
  