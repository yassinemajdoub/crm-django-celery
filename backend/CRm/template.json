{
    "apiVersion": "v1",
    "kind": "Template",
    "metadata": {
      "name": "django-postgres-template"
    },
    "objects": [
      {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
          "name": "django",
          "labels": {
            "name": "django"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "django",
              "image": "quay.io/${RHT_OCP4_QUAY_USER}/backend",
              "ports": [
                {
                  "containerPort": 8000,
                  "name": "django"
                }
              ],
              "resources": {
                "limits": {
                  "cpu": "0.5"
                }
              },
              "env": [
                {
                  "name": "POSTGRES_DB",
                  "value": "Crm"
                },
                {
                  "name": "POSTGRES_USER",
                  "value": "Crm"
                },
                {
                  "name": "POSTGRES_PASSWORD",
                  "value": "crm_pass"
                },
                {
                  "name": "POSTGRES_HOST",
                  "value": "postgres-service"
                },
                {
                  "name": "EMAIL_HOST_PASSWORD",
                  "value": "eyptqiigpjsvbqwu"
                },
                {
                  "name": "EMAIL_HOST_USER",
                  "value": "aqwa4394@gmail.com"
                },
                {
                  "name": "DOMAIN",
                  "value": "localhost:3000"
                },
                {
                    "name": "CELERY_BROKER",
                    "value": "redis://redis-service:6379"
                },
                {
                    "name": "CELERY_BACKEND",
                    "value": "redis://redis-service:6379"
                }
              ]
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
          "name": "react",
          "labels": {
            "name": "react"
          }
        },
        "spec": {    
            "securityContext": {
                "runAsUser": 1000920000
              },
          "containers": [
            {
              "name": "react",
              "image": "quay.io/${RHT_OCP4_QUAY_USER}/frontend",
              "ports": [
                {
                  "containerPort": 8000,
                  "name": "react"
                }
              ],
              "resources": {
                "limits": {
                  "cpu": "0.5"
                }
              }
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
          "name": "celery",
          "labels": {
            "name": "celery"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "celery",
              "image": "quay.io/${RHT_OCP4_QUAY_USER}/celery",
              "resources": {
                "limits": {
                  "cpu": "0.5"
                }
              },
              "env": [
                {
                    "name": "CELERY_BROKER",
                    "value": "redis://redis-service:6379"
                },
                {
                    "name": "CELERY_BACKEND",
                    "value": "redis://redis-service:6379"
                }
              ]
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
          "name": "celery-beat",
          "labels": {
            "name": "celery-beat"
          }
        },
        "spec": {
            "securityContext": {
                "runAsUser": 1001
              },
          "containers": [
            {
              "name": "celery-beat",
              "image": "quay.io/${RHT_OCP4_QUAY_USER}/celery-beat",
              "resources": {
                "limits": {
                  "cpu": "0.5"
                }
              },
              "env": [
                {
                    "name": "CELERY_BROKER",
                    "value": "redis://redis-service:6379"
                },
                {
                    "name": "CELERY_BACKEND",
                    "value": "redis://redis-service:6379"
                }
              ]
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
          "name": "db",
          "labels": {
            "name": "db"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "db",
              "image": "registry.redhat.io/rhel8/postgresql-15",
              "ports": [
                {
                  "containerPort": 5432,
                  "name": "db"
                }
              ],
              "volumeMounts": [
                {
                  "name": "postgres-data",
                  "mountPath": "/var/lib/postgresql/data"
                }
              ],
              "env": [
                {
                  "name": "POSTGRESQL_DATABASE",
                  "value": "Crm"
                },
                {
                  "name": "POSTGRESQL_USER",
                  "value": "Crm"
                },
                {
                  "name": "POSTGRESQL_PASSWORD",
                  "value": "crm_pass"
                }
              ]
            }
          ],
          "volumes": [
            {
              "name": "postgres-data",
              "persistentVolumeClaim": {
                "claimName": "postgres-pvc"
              }
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "PersistentVolumeClaim",
        "metadata": {
          "name": "postgres-pvc"
        },
        "spec": {
          "accessModes": ["ReadWriteOnce"],
          "resources": {
            "requests": {
              "storage": "1Gi"
            }
          }
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Pod",
        "metadata": {
          "name": "redis",
          "labels": {
            "name": "redis"
          }
        },
        "spec": {
          "containers": [
            {
              "name": "redis",
              "image": "registry.redhat.io/rhel9/redis-7",
              "ports": [
                {
                  "containerPort": 6379,
                  "name": "redis"
                }
              ],
              "resources": {
                "limits": {
                  "cpu": "0.5"
                }
              }
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Service",
        "metadata": {
          "name": "redis-service"
        },
        "spec": {
          "selector": {
            "name": "redis"
          },
          "ports": [
            {
              "port": 6379
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Service",
        "metadata": {
          "name": "django-service"
        },
        "spec": {
          "selector": {
            "name": "django"
          },
          "ports": [
            {
              "port": 8000
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Service",
        "metadata": {
          "name": "react-service"
        },
        "spec": {
          "selector": {
            "name": "react"
          },
          "ports": [
            {
              "port": 3000
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Service",
        "metadata": {
          "name": "celery-service"
        },
        "spec": {
          "selector": {
            "name": "celery"
          },
          "ports": [
            {
              "port": 3001
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Service",
        "metadata": {
          "name": "celery-beat-service"
        },
        "spec": {
          "selector": {
            "name": "celery-beat"
          },
          "ports": [
            {
              "port": 3002
            }
          ]
        }
      },
      {
        "apiVersion": "v1",
        "kind": "Service",
        "metadata": {
          "name": "postgres-service"
        },
        "spec": {
          "selector": {
            "name": "db"
          },
          "ports": [
            {
              "port": 5432
            }
          ]
        }
      }
    ],
    "parameters": [
        {
            "description" : "Quay namespace the images are stored in" ,
            "name":"RHT_OCP4_QUAY_USER",
            " required" :true
         }
    ]
  }
  